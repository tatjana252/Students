@model Students.WebApp.Models.LoginViewModel

@section Style{ 
<link rel="stylesheet" href="~/css/login.css" />
}

<h4 class="text-center">Login</h4>
<hr />
<div class="row justify-content-center">
    <div class="w-75">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-5">
                <input asp-for="Username" class="form-control @(ViewData.ModelState.Any(s => s.Key =="") ? "error":"")" 
                       placeholder="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group my-5"> 
                <input asp-for="Password" class="form-control @(ViewData.ModelState.Any(s => s.Key =="") ? "error":"")" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
           
            <div class="form-group text-center">
                <input type="submit" value="Login" class="btn-login" />
            </div>
        </form>
    </div>
</div>


